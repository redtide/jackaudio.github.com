---
permalink: /atom.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ site.name }} News</title>
    <link href="{{ site.url }}/atom.xml" rel="self"/>
    <icon>{{ site.url }}/assets/icons/favicon-32x32.png</icon>
    <link href="{{ site.url }}"/>
    <updated>{{ now | date('c') }}</updated>
    <id>{{ site.url }}/</id>
{% for post in collections.posts | slice(0, 20) %}
    <entry>
        <title>{{ post.title }}</title>
        <author><name>{{ post.author }}</name></author>
        <link href="{{ site.url }}{{ url(post) }}"/>
        <published>{{ post.date | date('c') }}</published>
        <id>{{ url(post) }}</id>
        <content type="html">{{ post.content | escape }}</content>
    </entry>
{% endfor %}
</feed>
